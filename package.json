{
  "name": "readshift",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --cache",
    "lint:watch": "nodemon --watch src/ --ext ts,tsx --exec \"npm run lint\"",
    "typecheck": "tsc --noEmit --watch -p tsconfig.app.json",
